<%= render "devise/shared/header"%>
<div class="devise-container  bg-light"> 
  <div class="devise-main-sign-up">
    <div class=" devise-title d-flex align-items-center">
      <p class="text-primary sign-in-title">新規登録</p>
    </div>
    <div class="devise-form-container d-flex align-items-center"> 
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: "devise-forms"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
          <div class="devise-field">
            <div class=" d-flex  w-100"><%= f.label :name, class:"label text-secondary"%><br /></div>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control bg-light h-50"  %>
          </div>

          <div class="devise-field">
            <div class="h-50 d-flex  w-100"><%= f.label :email , class:"label text-secondary"%><br /></div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control bg-light h-50" %>
          </div>

          <div class="devise-field">
            <div class="h-50 d-flex w-100"><%= f.label :password, class:"label text-secondary" %>
            <% if @minimum_password_length %><span class="label text-secondary">(<%= @minimum_password_length %>文字以上)</span><% end %>
            <br /> </div>
           
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control bg-light h-50" %>
          </div>

          <div class="devise-field">
            <div class="h-50 d-flex  w-100"><%= f.label :password_confirmation, class:"label text-secondary" %><br /></div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control bg-light h-50" %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録", class:"btn btn-outline-secondary"  %>
          </div>
          <p class="non-account">既にアカウントをお持ちの方は<br/>
           <%= render "devise/shared/links" %>
          </p>
        <% end %>
    </div>
  </div>
</div>
<%= render "devise/shared/footer" %>
