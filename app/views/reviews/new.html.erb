<%# 後からヘッダー消すかも %>
<%= render "shared/second-header" %>


<div class="review-create-contents">
  <%# 後からロゴ入れるかも %>
  <div class="review-create-main">
    <p class="title">
      <%= @place.place_name %>
    </p>
    <%= form_with(model: [@place, @review], local: true) do |f| %>
      <%= render "shared/error_messages", model: f.object %>
      <div class="image-upload">  
        <div class="contents-title">
          画像
        </div>
        <div class="click-upload">
          <p> クリックしてアップロード</p>
          <%= f.file_field :image, id: "review-image" %>
        </div>
      </div>
      <div class="review-name">  
        <div class="contents-title">
          DOWNLOAD SPEED
          <span class="wired">有線接続時</span>
          <%= f.number_field :download, id: "download-speed", class: "speed-input", placeholder: "数値",in: 0.01..3000.00, step: 0.01 %>
          <span class="mbps">Mbps</span>
        </div>
      </div>
      <div class="review-name">  
        <div class="contents-title">
          UPLOAD SPEED
          <span class="wired">有線接続時</span>
          <%= f.number_field :upload, id: "upload-speed", class: "speed-input", placeholder: "数値",in: 0.01..3000.00, step: 0.01 %>
          <span class="mbps">Mbps</span>
        </div>
      </div>
      <div class="review-comment">  
        <div class="contents-title">
          コメント
          <%= f.text_area :comment, id: "comment", class: "review-text-input", placeholder: "1000文字まで", rows: "7", maxlength: "1000" %>
        </div>
      </div>
      <div class="create-btn">
        <%= f.submit "レビューする", class: "submit" %>
        <%= link_to "もどる", root_path, class: "back-btn" %>
      </div>
    <% end %>
  </div>
</div>